{
  "name": "teachdigital-backend",
  "version": "1.0.0",
  "description": "Backend API pour TeachDigital - Vercel Functions",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "build": "echo 'No build step required'",
    "deploy": "node scripts/deploy.js production",
    "deploy:preview": "node scripts/deploy.js preview",
    "deploy:synology": "powershell -ExecutionPolicy Bypass -File ./deploy-synology.ps1",
    "deploy:synology:skip-build": "powershell -ExecutionPolicy Bypass -File ./deploy-synology.ps1 -SkipBuild",
    "setup:env": "node scripts/setup-env.js",
    "init-badges": "node scripts/init-badges.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "api/**/*.js",
      "controllers/**/*.js"
    ]
  },
  "dependencies": {
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "@fastify/busboy": "^2.1.1",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tesseract.js"
    ]
  }
}