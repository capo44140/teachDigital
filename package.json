  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "dotenv": "^17.2.3",
    "postcss": "^8.4.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.0.0",
    "terser": "^5.24.0",
    "vite": "^5.0.0"
  }
}
