{
  "name": "teachdigital",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production && node scripts/generate-sw.js",
    "build:vercel": "node scripts/build-vercel.js",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "validate-manifest": "node scripts/validate-manifest.js",
    "test-profile-cache": "node scripts/test-profile-cache.js",
    "init-db": "node scripts/init-db.js",
    "db:init": "node scripts/init-db.js",
    "db:test": "node -e \"import('./src/config/database.js').then(db => db.testConnection())\"",
    "migrate-pins": "node scripts/migrate-pins.js migrate",
    "check-pins": "node scripts/migrate-pins.js check",
    "update-parent-pin": "node scripts/update-parent-pin.js",
    "test-pin-security": "node scripts/test-pin-security.js",
    "migrate-db": "node scripts/migrate-database.js migrate",
    "check-db": "node scripts/migrate-database.js check",
    "migrate-teens": "node scripts/migrate-teen-profiles.js migrate",
    "check-profiles": "node scripts/migrate-teen-profiles.js check",
    "create-teen": "node scripts/migrate-teen-profiles.js create",
    "migrate-lessons": "node scripts/migrate-lessons.js",
    "migrate-badges": "node scripts/migrate-badges.js",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "version:current": "node -p \"require('./package.json').version\"",
    "setup:hooks": "node scripts/setup-git-hooks.js",
    "test:version": "node scripts/test-version-display.js",
    "test:notifications": "node scripts/test-notifications.js",
    "test:youtube-kids": "node scripts/test-youtube-kids-viewer.js",
    "debug:profiles": "node scripts/check-profiles-debug.js",
    "update:deps:check": "node scripts/update-dependencies.js check",
    "update:deps:minor": "node scripts/update-dependencies.js minor",
    "update:deps:major": "node scripts/update-dependencies.js major",
    "lint": "eslint src --ext .js,.vue --fix",
    "lint:check": "eslint src --ext .js,.vue",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:manual": "playwright test --config=playwright.manual.config.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ui:manual": "playwright test --ui --config=playwright.manual.config.js",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:clean": "rm -rf test-results/ playwright-report/ blob-report/",
    "test:e2e:auth": "playwright test tests/e2e/auth/",
    "test:e2e:dashboard": "playwright test tests/e2e/dashboard/",
    "test:e2e:youtube": "playwright test tests/e2e/youtube/",
    "test:e2e:pwa": "playwright test tests/e2e/pwa/",
    "test:e2e:profile": "playwright test tests/e2e/profile/",
    "test:all": "pnpm test:run && pnpm test:e2e",
    "type-check": "vue-tsc --noEmit",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "security:check": "pnpm audit && pnpm run lint:check",
    "build:analyze": "vite build --mode production && node scripts/analyze-bundle.js",
    "build:analyze:visual": "vite build --mode production && npx vite-bundle-analyzer dist/assets/*.js",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "bundle:size": "npx vite-bundle-analyzer dist/assets/*.js",
    "bundle:analyze": "node scripts/analyze-bundle.js",
    "performance:check": "pnpm run build && pnpm run bundle:analyze && pnpm run lighthouse",
    "check:performance": "node scripts/check-performance.js",
    "check:optimizations": "node scripts/check-performance.js",
    "optimize:analyze": "node scripts/optimize-bundle.js"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "@neondatabase/serverless": "^1.0.2",
    "pinia": "^3.0.3",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-standard": "^9.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^2.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^25.0.0",
    "lighthouse": "^12.0.0",
    "postcss": "^8.4.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.0.0",
    "terser": "^5.24.0",
    "vite": "^7.1.9",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.0"
  }
}
